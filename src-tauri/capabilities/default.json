{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-desktop-read",
      "allow": [
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    {
      "identifier": "fs:allow-desktop-write",
      "allow": [
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    }
  ]
}